.wrapper
  .notice グループを作成しました
.side-bar
  .side-bar__header
    .side-bar__header__name
      yu
    %ul.side-bar__header__lists
      = link_to "/groups/new", class: "new-group" do
        %span.fa.fa-pencil-square-o
      %li.edit-account
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
  .side-bar__bottom
    = render partial:"group-message"
.chat-main
  .chat-main__header
    .chat-main__header-group
      .chat-main__header-group__name
        グループ名
      .chat-main__header-group__members
        Member : yu
    .chat-main__header-group__edit
      .chat-main__header-group__edit-button
        = link_to "Edit", "groups/13992/edit"
  .chat-main__body
    .chat-main__body-message__list
      .chat-main__body-message.creafix
        = render partial: "message"
      .chat-main__body-message__down

  .chat-main__footer
    .chat-main__footer-body
      = form_for "" do |f|
        = f.text_field :text, placeholder: "type a message", class: "input"
        = f.submit "Send", class: 'submit'
        = f.label :image, class: "attachment" do
          = fa_icon "image"

